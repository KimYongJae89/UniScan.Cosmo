<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="FontFamily">SansSerif</FontFamily>

    <sys:Double x:Key="VeryLargeFontSize">48</sys:Double>
    <sys:Double x:Key="LargeFontSize">24</sys:Double>
    <sys:Double x:Key="MediumLargeFontSize">20</sys:Double>
    <sys:Double x:Key="MediumFontSize">16</sys:Double>
    <sys:Double x:Key="SmallMediumFontSize">12</sys:Double>
    <sys:Double x:Key="SmallFontSize">8</sys:Double>

</ResourceDictionary>
